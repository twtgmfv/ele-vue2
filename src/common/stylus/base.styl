html, body
  line-height:1
  font-weight:200
  font-family:'Microsoft YaHei UI', 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif
  font-size:12px
/*font*/
.fs-16, h1
  font-size:16px
.fs-12, h2
  font-size:12px
.fs-10, h3
  font-size:10px
/*省略号*/
.text-ellipsis
  white-space:nowrap
  overflow:hidden
  text-overflow:ellipsis
/*margin*/
.mt-8
  margin-top:8px
.mt-10
  margin-top:10px
.ml-12
  margin-left:12px
.ml-16
  margin-left:16px
.mr-12
  margin-right:12px
/*解决inline-block 3px Bug*/
[class*="-wrap"]
  font-size:0
  //word-spacing:-4px
[class^="icon"]
  display:inline-block

.fade-enter-active, .fade-leave-active {
  transition:all .2s line
}

@media (-webkit-min-device-pixel-ratio:1.5),(min-device-pixel-ratio:1.5)
  .border-1px
    &:after
      -webkit-transform:scaleY(.7)
      transform:scaleY(.7)
@media (-webkit-min-device-pixel-ratio:2),(min-device-pixel-ratio:2)
  .border-1px
    &:after
      -webkit-transform:scaleY(.5)
      transform:scaleY(.5)
.clearfix
  display:inline-block
  &:after
    display:block
    content:'.'
    height: 0
    line-height: 0
    visibility:hidden
    clear:both